---
interface Props {
  title: string;
  description: string;
  url: string;
  category: string;
}

const { title, description, url, category } = Astro.props;
---

<div class="blog-card bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow" data-category={category}>
  <div class="flex justify-between items-start mb-4">
    <h3 class="text-xl font-bold text-gray-900">{title}</h3>
    <span class="px-3 py-1 text-sm bg-purple-100 text-purple-800 rounded-full">{category}</span>
  </div>
  <p class="text-gray-600 mb-4">{description}</p>
  <a
    href={url}
    target="_blank"
    rel="noopener noreferrer"
    class="text-purple-600 hover:text-purple-800 font-medium"
  >
    访问网站 →
  </a>
</div>