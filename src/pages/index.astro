---
import Layout from '../layouts/Layout.astro';
import BlogCard from '../components/BlogCard.astro';
import SearchBar from '../components/SearchBar.vue';

const blogs = [
  {
    title: "阮一峰的网络日志",
    description: "著名技术博主，分享 Web 开发、JavaScript、计算机科学等领域的知识。",
    url: "https://www.ruanyifeng.com/blog/",
    category: "综合技术"
  },
  {
    title: "酷壳 - CoolShell",
    description: "左耳朵耗子的技术博客，分享编程技术和思考。",
    url: "https://coolshell.cn/",
    category: "系统架构"
  },
  {
    title: "美团技术团队",
    description: "美团点评技术团队的博客，分享各种技术实践经验。",
    url: "https://tech.meituan.com/",
    category: "企业技术"
  },
  {
    title: "InfoQ",
    description: "关注软件开发领域的新闻、趋势和最佳实践。",
    url: "https://www.infoq.cn/",
    category: "技术资讯"
  },
    {
    title: "朱亚光",
    description: "朱亚光的博客",
    url: "https://zhuyaguang.github.io/",
    category: "技术资讯"
  }
];

const categories = [...new Set(blogs.map(blog => blog.category))];
---

<Layout title="博客导航">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-center text-gray-900 mb-8">
      博客导航
    </h1>
    
    <SearchBar client:load />

    <div class="mb-12">
      <h2 class="text-2xl font-semibold text-gray-800 mb-6">分类浏览</h2>
      <div class="flex flex-wrap gap-4 mb-8">
        {categories.map((category) => (
          <button
            class="px-4 py-2 rounded-full bg-purple-100 text-purple-800 hover:bg-purple-200 transition-colors"
          >
            {category}
          </button>
        ))}
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {blogs.map((blog) => (
        <BlogCard {...blog} />
      ))}
    </div>
  </main>
</Layout>